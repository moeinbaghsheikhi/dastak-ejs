				$("#login-step-2").click(function(){
					let mobile = $("#mobile").val()
					if(mobile == "" || !mobile)
						return toastr.error("اول شماره موبایلت رو وارد کن!")
					else if (mobile.length != 11)
						return toastr.error("موبایل باید 11 رفم باشه!")

                            </div>
                            <!--end::Heading-->
                            <!--begin::Input group-->
                            <div class="d-flex flex-column mb-8 fv-row">
                                <!--begin::Label-->
                                <label class="d-flex align-items-center fs-6 fw-bold mb-2">
                                    <span id="titleCard" class="required">شماره کارت: </span>
                                    <i class="bi bi-info-circle ms-2 fs-7" data-bs-toggle="tooltip" id="iconCard"
                                        title="اینجا باید شماره کارتت رو وارد کنی"></i>
                                    <span id="titleCard-after" style="display: none;">شماره کارتت: </span>
                                </label>
                                <!--end::Label-->
                                <input type="number" class="form-control form-control-solid" id="cardNumber"
                                    style="direction: rtl;" placeholder="شماره کارتت رو وارد کن" required />

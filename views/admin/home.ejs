    <script>
        $(document).ready(function(){
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-center",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
                };
        })
        function formatCreditCard(cardNumber) {
            cardNumber = cardNumber.replace(/\s/g, '');
            const formattedCard = cardNumber.match(/.{1,4}/g).join(' ');
            return formattedCard;
        }
        $("#submit").click(()=>{
            if($("#cardNumber").val().length != 16){
                toastr.error("!شماره کارت نامعتبره");
            }
            else{
                if($("#cardName").val() == null || $("#cardName").val() == ""){
                    toastr.error("!لطفا نام صاحب کارتی که نوشتی رو وارد کن");
                }
                else if($("#cardName").val().length <= 5){
                    toastr.error("!لطفا از نوشتن نام کامل مطمئن شو");
                }
                else{
                    toastr.success("(;شماره کارت با موفقیت اضافه شد");
                    setTimeout=(()=>{
                        $("#titleFormCard").text("مشخصات کارت بانکی")
                        $("#titleCard").hide()
                        $("#iconCard").hide()
                        $("#titleCard-after").fadeIn(500)
                        $("#cardNumber").hide()
                        $("#showCardNumber").text(formatCreditCard($("#cardNumber").val()))
                        $("#showCardNumber").fadeIn(500)
                        $("#cardNameTitle").removeClass("required")
                        $("#cardName").hide()
                        $("#showCardName").text($("#cardName").val())
                        $("#showCardName").fadeIn(500)
                        $("#submit").hide()
                        $("#edit").fadeIn(500)
                    }),500;
                }
            }
        })
    </script>

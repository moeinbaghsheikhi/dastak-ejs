    <script>
        $(document).ready(function () {
            MagicRequest("get", "factors").then(response => response.text())
                .then(result => {
                    result = JSON.parse(result).data
                    console.log(result)
                    $.each(result, function (index, value) {
                        let statusfactor;
                        if(value?.status ==1) statusfactor = '<span class="badge badge-info">ایجاد شده</span>'
                        else if(value?.status ==2) statusfactor = '<span class="badge badge-primary"> در انتظار پرداخت </span>'
                        else if(value?.status ==3) statusfactor = '<span class="badge badge-danger"> انصراف از پرداخت </span>'
                        else if(value?.status ==4) statusfactor = '<span class="badge badge-warning"> منقضی شده </span>'
                        else if(value?.status ==5) statusfactor = '<span class="badge badge-success"> پرداخت شده </span>'
                        if (value.account.id == localStorage.getItem("account_id")) $("#tbody-table").append(' <tr> <td> <div class="d-flex align-items-center" style="margin-right: 10px;"> <div class="d-flex justify-content-start flex-column"> <span class="text-dark fw-bolder text-hover-primary mb-1 fs-6"> '+ value.code +' </span> </div> </div> </td> <td> <div class="d-flex align-items-center justify-content-center" style="margin-right: 10px;"> <div class="d-flex justify-content-center flex-column"> <span class="text-dark fw-bolder text-hover-primary mb-1 fs-6"> <span class="badge badge-light-info">'+ value.off_percent +'%</span> </span> </div> </div> </td> <td> <div class="d-flex align-items-center justify-content-center" style="margin-right: 10px;"> <div class="d-flex justify-content-center flex-column"> <span class="text-dark fw-bolder text-hover-primary mb-1 fs-6"> '+ statusfactor +' </span> </div> </div> </td> <td class="text-end"> <button class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm"> <!--begin::Svg Icon | path: icons/duotune/general/gen027.svg--> <span class="svg-icon svg-icon-3"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"> <path d="M21.7 18.9L18.6 15.8C17.9 16.9 16.9 17.9 15.8 18.6L18.9 21.7C19.3 22.1 19.9 22.1 20.3 21.7L21.7 20.3C22.1 19.9 22.1 19.3 21.7 18.9Z" fill="black" /> <path opacity="0.3" d="M11 20C6 20 2 16 2 11C2 6 6 2 11 2C16 2 20 6 20 11C20 16 16 20 11 20ZM11 4C7.1 4 4 7.1 4 11C4 14.9 7.1 18 11 18C14.9 18 18 14.9 18 11C18 7.1 14.9 4 11 4ZM8 11C8 9.3 9.3 8 11 8C11.6 8 12 7.6 12 7C12 6.4 11.6 6 11 6C8.2 6 6 8.2 6 11C6 11.6 6.4 12 7 12C7.6 12 8 11.6 8 11Z" fill="black" /> </svg> </span> <!--end::Svg Icon--> </button> </td> </tr> ')
                    })
                }).catch(error => console.log('error', error));
        })
    </script>

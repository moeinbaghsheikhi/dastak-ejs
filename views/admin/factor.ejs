            function separate(Number){
                Number+= '';
                Number= Number.replace(',', '');
                x = Number.split('.');
                y = x[0];
                z= x.length > 1 ? '.' + x[1] : '';
                var rgx = /(\d+)(\d{3})/;
                while (rgx.test(y))
                y= y.replace(rgx, '$1' + ',' + '$2');
                return y+ z;
                }
            $(document).on("click","#showmodal",function(){
                let code = (this.getAttribute("code"))
                $("#factorCode").empty();
                $("#show-factor").empty();
                $("#sumPrice").empty();
                $("#offer-Price").empty();
                $("#final-Price").empty();
                $("#factorCondition").empty();
                MagicRequest("get", "factors/"+code).then(response => response.text())
                .then(result => {
                    result = JSON.parse(result)?.result;
                    $("#copyBtn").attr("factor_code_copy", result.code)
                    let sum = 0;
                    let statusfactor;
                    if (result.status == 1) statusfactor = '<span class="badge badge-info">ایجاد شده</span>'
                    else if (result.status == 2) statusfactor = '<span class="badge badge-primary"> در انتظار پرداخت </span>'
                    else if (result.status == 3) statusfactor = '<span class="badge badge-danger"> انصراف از پرداخت </span>'
                    else if (result.status == 4) statusfactor = '<span class="badge badge-warning"> منقضی شده </span>'
                    else if (result.status == 5) statusfactor = '<span class="badge badge-success"> پرداخت شده </span>'
                    else if (result.status == 6) statusfactor = '<span class="badge badge-primary"> تایید شده </span>'
                    else if (result.status == 7) statusfactor = '<span class="badge badge-success"> ارسال شده</span>'
                    else if (result.status == 8) statusfactor = '<span class="badge badge-success"> دریافت شده </span>'

                    $("#factorCode").append('<span class="badge badge-light-info fs-5">'+ result.code +'</span>')
                    $("#factorCondition").append(statusfactor)
                    $.each(result.products, function (index, value) {
                        sum += parseInt(value.price);
                        // console.log(value)
                        $("#show-factor").append(' <tr> <td> <div class="d-flex align-items-center" style="margin-right: 10px;"> <div class="d-flex justify-content-start flex-column"><span class="text-hover-primary mb-1 fs-6">'+ value.title +'</span> </div> </div> </td> <td class="d-flex align-items-center justify-content-center"> <div class="d-flex align-items-center"> <div class="d-flex justify-content-start flex-column"><span class="text-hover-primary mb-1 fs-6">'+ separate(value.price) +'</span> </div> </div> </td> </tr>" ');
                    })
                    let finalPrice = sum/100*(100-result.offPercent)
                    $("#sumPrice").append('<span class="badge badge-light">مجموع:<span class="badge text-info"> '+ separate(sum) +' تومان </span></span>')
                    $("#offer-Price").append('<span class="badge badge-light">تخفیف:<span class="badge text-muted">'+ result.offPercent +'%</span> </span>')
                    $("#final-Price").append('<div class="fs-2 fw-bolder text-primary">'+ separate(finalPrice) +'</div> <span class="text-primary ms-2 fs-2 fw-bolder">تومان</span> ')

                }).catch(error => console.log('error', error));

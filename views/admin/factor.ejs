        let number = 1
        let factor_list = []
        function deletepro(id) {
            $("#pro-" + id).remove()
            let new_arr = []
            $.each(factor_list, function (index, value) {
                // console.log(value.number)
                // console.log(id)
                // console.log("---------")
                if (value.number != id)
                    new_arr.push(value)
            })
            factor_list = new_arr
            // console.log(factor_list)
        }
        function clipboard(code) {
            navigator.clipboard.writeText("dastakapp.ir/factor/" + code);
            toastr.success("<a style='font-size: 12px' href='http://dastakapp.ir/factor/" + code + "'>" + code + "</a>" + " : لینک فاکتور در کلیپ بورد کپی شد");
        }

        $(document).ready(function () {
            $(document).on("click", "#clipboard", function () {
                clipboard(this.getAttribute("code"))
            })
            $("#btn-add").click(function () {
                let product_id = $("#products").val()

                if (!product_id)
                    toastr.error("!اول یکی از محصولاتت رو انتخاب کن")
                else MagicRequest("get", "products/" + product_id).then(response => response.text())
                    .then(result => {
                        result = JSON.parse(result).result
                        // console.log(result)
                        if (factor_list.length == 0)
                            $("#factor-tbody").empty()
                        count = parseInt($("#count").val())
                        result.count = count

                        $("#factor-tbody").append('<tr id="pro-' + number + '"><td> <div class="d-flex align-items-center" style="margin-right: 10px;"><div class="d-flex justify-content-start flex-column"><span class="text-hover-primary mb-1 fs-6">' + result.title + '</span> </div> </div> </td> <td> <div class="d-flex align-items-center" style="margin-right: 10px;"> '+count+'</div> </td> <td class="d-flex align-items-center"> <div class="d-flex align-items-center"><div class="d-flex justify-content-start flex-column"><span class="text-hover-primary mb-1 fs-6">' + separate(result.price * count) + '</span> </div> </div> </td> <td class="text-end"> <span class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" onclick="deletepro(' + number + ')"> <span class="svg-icon svg-icon-3"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"> <path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z" fill="black" /> <path opacity="0.5" d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z" fill="black" /> <path opacity="0.5" d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z" fill="black" /> </svg> </span> </span> </td> </tr>"')
                        factor_list.push({ number, ...result })
                        number++
                        console.log(factor_list)
                        toastr.success("(:محصول به فاکتورت اضافه شد");
                    }).catch(error => console.log('error', error));
            })

            $("#copyBtn").click(()=>{
                    clipboard($("#copyBtn").attr("factor_code_copy"))
                    })

            $("#submit").click(function () {
                let offPercent = parseInt($("#offPercent").val()) || null
                // console.log(offPercent)

                let product_list = []
                $.each(factor_list, function (index, value) {
                    product_list.push({id: value.id, count: value.count})
                })

                let factor_data = {
                    "products": product_list,
                    "OffPercent": offPercent
                }

                if (factor_list.length >= 1)
                    MagicRequest("post", "factors", factor_data, false)
                        .then(result => {
                            let data = result?.result
                            let factor_code = result?.result?.code
                            // Select the text field
                            navigator.clipboard.writeText("dastakapp.ir/factor/" + factor_code);

                            toastr.success(factor_code + ": لینک فاکتور در کلیپ بورد کپی شد");
                            setTimeout(function () { location.reload() }, 2500)
                        }).catch(error => console.log('error', error));
                else {
                    toastr.error("!فاکتور شما هنوز خالیه")
                }
            })
            $(document).ready(function() {
                $('#offPercent').on('input', function() {
                    if (parseInt($(this).val(), 10) > 99) {
                        toastr.error("!بیشتر از 99 درصد نمیتونی وارد کنی");

                        $(this).val('1');
                    }
                });
            });

        })

    </script>

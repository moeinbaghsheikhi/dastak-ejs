                </div>
                <!--end::Modal content-->
            </div>
            <!--end::Modal dialog-->
        </div>
    </div>
    <script>
        let account_id = localStorage.getItem("account_id")
         let categories = MagicRequest("get", "products").then(response => response.text())
                    .then(result => {
                        result = JSON.parse(result).data
                        $.each(result, function (index, value) {
                            if (value.account.id == account_id) {
                                // if (index == 0) $("#add #categories_id").append('<option value="' + value.id + '" selected>' + value.title + '</option> ') else
                                $("#products").append('<option value="' + value.id + '">' + value.title + '</option> ')
                            }
                        })
                    }).catch(error => console.log('error', error));

        MagicRequest("get", "factors").then(response => response.text())
            .then(result => {
                result = JSON.parse(result).data
                // console.log(result)
                $.each(result, function (index, value) {
                    let statusfactor;
                    let off_percent = "ندارد"
                    if(value.off_percent) off_percent = '<span class="badge badge-light-info">%' + value.off_percent + '</span>'
                    console.log(value.off_percent)
                    if(value.status ==1) statusfactor = '<span class="badge badge-info">ایجاد شده</span>'
                    else if(value.status ==2) statusfactor = '<span class="badge badge-primary"> در انتظار پرداخت </span>'
                    else if(value.status ==3) statusfactor = '<span class="badge badge-danger"> انصراف از پرداخت </span>'
                    else if(value.status ==4) statusfactor = '<span class="badge badge-warning"> منقضی شده </span>'
                    else if(value.status ==5) statusfactor = '<span class="badge badge-success"> پرداخت شده </span>'
                    if (value.account.id == account_id) $("#tbody-table").append(' <tr> <td> <div class="d-flex align-items-center" style="margin-right: 10px;"> <div class="d-flex justify-content-start flex-column"> <span class="text-dark fw-bolder text-hover-primary mb-1 fs-6"> '+ value.code +' </span> </div> </div> </td> <td> <div class="d-flex align-items-center justify-content-center" style="margin-right: 10px;"> <div class="d-flex justify-content-center flex-column"> <span class="text-hover-primary mb-1 fs-6"> '+ off_percent +' </span> </div> </div> </td> <td> <div class="d-flex align-items-center justify-content-center" style="margin-right: 10px;"> <div class="d-flex justify-content-center flex-column"> <span class="text-dark fw-bolder text-hover-primary mb-1 fs-6"> '+ statusfactor +' </span> </div> </div> </td> <td class="text-end"> <button class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm"> <!--begin::Svg Icon | path: icons/duotune/general/gen027.svg--> <span class="svg-icon svg-icon-3"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"> <path d="M21.7 18.9L18.6 15.8C17.9 16.9 16.9 17.9 15.8 18.6L18.9 21.7C19.3 22.1 19.9 22.1 20.3 21.7L21.7 20.3C22.1 19.9 22.1 19.3 21.7 18.9Z" fill="black" /> <path opacity="0.3" d="M11 20C6 20 2 16 2 11C2 6 6 2 11 2C16 2 20 6 20 11C20 16 16 20 11 20ZM11 4C7.1 4 4 7.1 4 11C4 14.9 7.1 18 11 18C14.9 18 18 14.9 18 11C18 7.1 14.9 4 11 4ZM8 11C8 9.3 9.3 8 11 8C11.6 8 12 7.6 12 7C12 6.4 11.6 6 11 6C8.2 6 6 8.2 6 11C6 11.6 6.4 12 7 12C7.6 12 8 11.6 8 11Z" fill="black" /> </svg> </span> <!--end::Svg Icon--> </button> </td> </tr> ')
                })
            }).catch(error => console.log('error', error));
      
        let number = 1
        let factor_list = []
        function deletepro(id){
            $("#pro-"+id).remove()
            let new_arr = []
            $.each(factor_list, function(index, value){
                // console.log(value.number)
                // console.log(id)
                // console.log("---------")
                if(value.number != id)
                    new_arr.push(value)
            })
            factor_list = new_arr
            // console.log(factor_list)
        }

        $(document).ready(function () {
            $("#btn-add").click(function(){
                let product_id = $("#products").val()

                if(!product_id)
                    toastr.error("!اول یکی از محصولاتت رو انتخاب کن")
                else  MagicRequest("get", "products/"+product_id).then(response => response.text())
                    .then(result => {
                        result = JSON.parse(result).data
                        // console.log(result)
                        if(factor_list.length == 0)
                            $("#factor-tbody").empty()
                        
                        $("#factor-tbody").append('<tr id="pro-'+number+'"><td> <div class="d-flex align-items-center" style="margin-right: 10px;"><div class="d-flex justify-content-start flex-column"><span class="text-hover-primary mb-1 fs-6">'+result.title+'</span> </div> </div> </td><td class="d-flex align-items-center"> <div class="d-flex align-items-center"><div class="d-flex justify-content-start flex-column"><span class="text-hover-primary mb-1 fs-6">'+result.price+'</span> </div> </div> </td> <td class="text-end"> <span class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm" onclick="deletepro('+number+')"> <span class="svg-icon svg-icon-3"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"> <path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z" fill="black" /> <path opacity="0.5" d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z" fill="black" /> <path opacity="0.5" d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z" fill="black" /> </svg> </span> </span> </td> </tr>"')
                    factor_list.push({number,...result})
                    number++
                    console.log(factor_list)
                    toastr.success("(:محصول به فاکتورت اضافه شد");
                    }).catch(error => console.log('error', error));
            })    
            
            $("#submit").click(function(){
                let off_percent = parseInt($("#off_percent").val()) || null
                // console.log(off_percent)

                let factor_data = {
                    "account_id": parseInt(account_id),
                    "off_percent": off_percent,
                    "status": 1
                }

                MagicRequest("post", "factors", factor_data, false)
                    .then(result => {
                        let data = result.data
                        let factor_code = result.data.code
                        // Select the text field
                        navigator.clipboard.writeText(factor_code);

                        $.each(factor_list, function(index, value){
                            let factor_item_data = {
                                "factor_id": data.id,
                                "product_id": value.id
                            }
                            MagicRequest("post", "factors_item", factor_item_data, false)
                        })
                    toastr.success("کد فاکتور شما هست : " + factor_code);
                    // setTimeout(location.reload(), 3000)
                    }).catch(error => console.log('error', error));
            })
        })

    </script>
